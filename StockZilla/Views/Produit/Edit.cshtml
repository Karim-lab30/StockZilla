@model StockZilla.Models.ProduitModel

@{
    ViewBag.Title = "Modifier le Produit";
}

<div class="container mt-4">
    <h2 class="text-center">Modifier le Produit</h2>

    @using (Html.BeginForm("Edit", "Produit", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            <label for="NomProduit" class="control-label">Nom du Produit</label>
            @Html.TextBoxFor(m => m.NomProduit, new { @class = "form-control", placeholder = "Nom du produit" })
            @Html.ValidationMessageFor(m => m.NomProduit, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="IdCategorie" class="control-label">Catégorie</label>
            @Html.DropDownListFor(m => m.IdCategorie, (SelectList)ViewBag.Categories, "Sélectionnez une catégorie", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.IdCategorie, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Quantite" class="control-label">Quantité</label>
            @Html.TextBoxFor(m => m.Quantite, new { @class = "form-control", placeholder = "Quantité" })
            @Html.ValidationMessageFor(m => m.Quantite, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Prix_Ht" class="control-label">Prix HT (€)</label>
            @Html.TextBoxFor(m => m.Prix_Ht, new { @class = "form-control", placeholder = "Prix HT" })
            @Html.ValidationMessageFor(m => m.Prix_Ht, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="TVA" class="control-label">TVA (%)</label>
            @Html.TextBoxFor(m => m.TVA, new { @class = "form-control", placeholder = "TVA" })
            @Html.ValidationMessageFor(m => m.TVA, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="PrixMoyen" class="control-label">Prix Moyen (€)</label>
            @Html.TextBoxFor(m => m.PrixMoyen, new { @class = "form-control", placeholder = "Prix moyen" })
            @Html.ValidationMessageFor(m => m.PrixMoyen, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Remise" class="control-label">Remise (%)</label>
            @Html.TextBoxFor(m => m.Remise, new { @class = "form-control", placeholder = "Remise" })
            @Html.ValidationMessageFor(m => m.Remise, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-end">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Enregistrer
            </button>
            <a href="@Url.Action("ListeProduit", "Produit")" class="btn btn-secondary">
                <i class="fa fa-arrow-left"></i> Annuler
            </a>
        </div>
    }
</div>
