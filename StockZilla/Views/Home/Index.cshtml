@model IEnumerable<StockZilla.Models.CategoModel>

@{
    ViewBag.Title = "Nos Catégories";
}

<h1 class="text-center mt-4 mb-5">Nos Catégories</h1>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var catego in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="data:image/jpeg;base64,@catego.ImageBase64" class="card-img-top" alt="Image de @catego.NomCategorie" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center mb-3">@catego.NomCategorie</h5>
                        <a href="@Url.Action("ProduitsParCategorie", "Produit", new { categorieNom = catego.NomCategorie })" class="btn btn-primary mt-auto">Voir +</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<h1 class="text-center mt-4 mb-5">Produits En Vedette</h1>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var produit in Model.OrderByDescending(p=>p.Remise).Take(3))
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="data:image/jpeg;base64,@produit.ImageBase64" class="card-img-top" alt="Image de @produit.NomProduit" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center mb-3">@produit.NomProduit</h5>
                        <a href="@Url.Action("ProduitsParCategorie", "Produit", new { categorieNom = produit.NomCategorie })" class="btn btn-primary mt-auto">Voir +</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>